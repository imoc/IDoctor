<!DOCTYPE html>
<html>
  <head>
    <meta charset="utf-8">
    <meta name="viewport" content="maximum-scale=1.0,minimum-scale=1.0,user-scalable=0,width=device-width,initial-scale=1.0"/>
    <meta name="format-detection" content="telephone=no,email=no,date=no,address=no">
    <title><%= title %></title>
    <link rel="stylesheet" type="text/css" href="/stylesheets/aui/aui.2.0.css">
    <link rel='stylesheet' href='/stylesheets/style.css'/>
  </head>
  <body>
  <section class="aui-grid">
    <div class="aui-row">
      <% for(var i=0; i<items.length; i++) { %>
      <div class="aui-col-xs-3" data-src="<%= items[i].src %>" data-id="<%= items[i].id %>" onclick="playVidio( '<%= items[i].title %>', '<%= items[i].src %>','<%= items[i].id %>')">
        <i class="aui-iconfont aui-icon-home"></i>
        <div class="aui-grid-label">
          <!--<a href='<%= items[i].src %>'>-->
            <!--<%= items[i].title %>-->
          <!--</a>-->
        </div>
      </div>
      <% } %>
    </div>
  </section>
  </body>
  <script>
    /**
     * android 特殊分享方法；
     */
    function playVidio(title, src, id){
      console.log(title+"-"+src+"-"+id)
//      location.href = src;
      api.execScript({
        name: 'root',
        script: 'playVidio("' + title +'","' + src +'","' + id + '");'
      });
    }
  </script>
</html>
